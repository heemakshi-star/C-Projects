#include<stdio.h>
int main()
{
    int num, s=5, i, j, k, d=1;
    printf("enter the number: ");
    scanf("%d", &num);

    if((num%2)!=0)
    {
        for(i=1; i<=9; i=i+2)
        {
            for(k=1; k<=s; k++)
            printf(" ");
            for(j=1; j<=i; j++)
            {
                printf("*");
            }
            printf("\n");
            s--;
        }
        for(i=1; i<=(num-2); i++)
        {
            printf("    ***  \n");
        }
        for(i=9; i>=1; i=i-2)
        {
            printf(" ");
            for(j=i; j>=1; j--)
            {
                printf("*");
            }
            printf("\n");
            if(d!=5)
            {
                for(k=1; k<=d; k++)
                {
                    printf(" ");
                }
            }
            d++;
        }
    }
    return 0;
}
