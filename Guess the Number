#include<stdio.h>
#include<stdlib.h>
#include<time.h>

int main()
{
    int number, guess, nguesses=1;
    srand(time(0));
    number=rand()%100 +1;
    //printf("The number is %d\n", number);

    do
    {
        printf("\nGuess the number between 1 to 100\n");
        scanf("%d", &guess);
        if(guess>number)
        {
            printf("\nThe number you have entered is greater than the original one, enter a lower number please\n");
        }
        else if (guess<number)
        {
            printf("\nThe number you have entered is lower than the original one, enter a higher number please\n");
        }
        else
        {
            printf("\n\tYou guessed the correct number in %d attempts", nguesses);
        }
        nguesses++;
    } 
    while(guess!=number);
    
    return 0;
}
